<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ecoach.cosapp.Activites.UserAccounts.CreateAccount">
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/account_circle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewFlipper"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/personalTXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="9dp"
                android:padding="10dp"
                android:text="Personal Information"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="53dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/phoneEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:ems="10"
                android:hint="Phone"
                android:inputType="phone"
                android:layout_below="@+id/emailedt"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/passwordEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_below="@+id/phoneEdt"
                android:layout_alignStart="@+id/phoneEdt"
                android:layout_alignParentEnd="true" />
            <EditText
                android:id="@+id/passwordEdt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:layout_below="@+id/passwordEdt"
                android:layout_alignStart="@+id/phoneEdt"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/profileDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="9dp"
                android:padding="10dp"
                android:text="Profile Details"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/surnameEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstEdt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:ems="10"
                android:hint="Surname"
                android:inputType="text" />

            <EditText
                android:id="@+id/firstEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="53dp"
                android:ems="10"
                android:hint="First Name"
                android:inputType="text" />

        </RelativeLayout>
        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:padding="5dp"
                android:id="@+id/locationHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Location"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/locationNameEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="41dp"
                android:ems="10"
                android:hint="eg. Home or Office"
                android:inputType="textPersonName" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/locationNameEdt"
                android:id="@+id/clicktopick"
                android:layout_width="match_parent"
                android:text="Click to Pick Location"
                android:layout_height="wrap_content" />

            <ImageButton
               android:layout_marginTop="20dp"
               android:layout_centerInParent="true"
                android:layout_below="@+id/clicktopick"
                android:scaleType="fitCenter"
                android:id="@+id/mapButton"
                android:src="@drawable/location_pin"
                android:layout_width="200dp"
                android:layout_height="100dp" />
        </RelativeLayout>
        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/summaryHead"
                android:text="Summary"
                android:textAlignment="center"
                android:textStyle="bold" />
            <ListView
                android:id="@+id/summaryList"
                android:layout_below="@+id/summaryHead"
                android:layout_width="wrap_content"
                android:layout_height="250dp">


            </ListView>

        </RelativeLayout>






    </ViewFlipper>


<LinearLayout
    android:padding="5dp"
    android:visibility="gone"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"
    android:layout_marginBottom="26dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true">

    <Button
        android:id="@+id/indicatorOne"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_weight="0.1" />

    <Button
        android:id="@+id/indicatorTwo"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_weight="0.1"

        />

    <Button
        android:id="@+id/indicatorThree"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_weight="0.1" />

    <Button
        android:id="@+id/indicatorFour"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_weight="0.1" />

    <Button
        android:id="@+id/indicatorfice"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_weight="0.1" />

</LinearLayout>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_below="@+id/viewFlipper"
        android:layout_toEndOf="@+id/imageView4" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewFlipper"
        android:layout_toStartOf="@+id/imageView4"
        android:text="Back" />



</RelativeLayout>
